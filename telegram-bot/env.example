# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# n8n Backend Configuration - Intent-Based Routing
# Basic questions endpoint (responds with CTA to connect wallet)
N8N_BASIC_WEBHOOK_URL=https://your-n8n-instance.com/webhook/basic-questions

# Strategy analysis endpoint (receives wallet data for personalized advice)  
N8N_STRATEGY_WEBHOOK_URL=https://your-n8n-instance.com/webhook/strategy-analysis

# Legacy endpoint (can be removed once new system is tested)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/telegram-bot

# Server Configuration
PORT=3000
PUBLIC_URL=https://your-app-url.com

# Rate Limiting Configuration
# User-based rate limiting (per Telegram user)
USER_RATE_LIMIT_WINDOW_MS=60000
USER_RATE_LIMIT_MAX_REQUESTS=5

# Logging Configuration
# Log level: error, warn, info, debug (default: info in production, debug in development)
LOG_LEVEL=info

# Optional: For debugging
NODE_ENV=development

# TON API Configuration (for wallet data retrieval)
TON_API_ENDPOINT=https://toncenter.com/api/v2/

# Optional: Etherscan API (for Ethereum wallet fallback)
# ETHERSCAN_API_KEY=your_etherscan_api_key 